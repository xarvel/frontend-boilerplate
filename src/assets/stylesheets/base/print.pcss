@media print {
  h1 {
    color: #000;
    background: none;
  }

  h2, 
  h3 {
    page-break-after: avoid;
  }

  img {
    max-width: 100% !important;
  }

  article {
    page-break-before: always;
  }

  ul, 
  img {
    page-break-inside: avoid;
  }

  nav, 
  aside {
    display: none;
  }

  body, 
  article {
    width: 100%;
    margin: 0;
    padding: 0;
  }

  article a {
    font-weight: bolder;
    text-decoration: none;
  }

  article a[href^=http]:after {
    content: " <" attr(href) "> ";
  }

  article a[href^="#"]:after {
    content: "";
  }
}  